<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TrainerFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/change_theme_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:icon="@drawable/ic_dark_theme"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconTint="?attr/colorOnBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/x_number_of_beats_picker_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/top_guideline"
        app:layout_constraintEnd_toStartOf="@id/number_of_beats_picker_separator"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/x_number_of_beats_increase_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="@string/increase_button_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/x_number_of_beats_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/polyrhythm_default_x_beats"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/x_number_of_beats_decrease_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="@string/decrease_button_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/number_of_beats_picker_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/polyrhythm_separator"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintBottom_toTopOf="@id/top_guideline"
        app:layout_constraintEnd_toStartOf="@id/y_number_of_beats_picker_layout"
        app:layout_constraintStart_toEndOf="@id/x_number_of_beats_picker_layout"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/y_number_of_beats_picker_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/top_guideline"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintStart_toEndOf="@id/number_of_beats_picker_separator"
        app:layout_constraintTop_toTopOf="parent" >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/y_number_of_beats_increase_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="@string/increase_button_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/y_number_of_beats_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/polyrhythm_default_y_beats"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/y_number_of_beats_decrease_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="@string/decrease_button_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.jorkoh.polyrhythmtrainer.ui.customviews.PolyrhythmVisualizer
        android:id="@+id/polyrhythmVisualizer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/right_guideline"
        app:layout_constraintStart_toEndOf="@id/left_guideline"
        app:layout_constraintTop_toBottomOf="@id/top_guideline"
        app:xColor="@color/rightPadColor"
        app:yColor="@color/leftPadColor" />

    <com.jorkoh.polyrhythmtrainer.ui.customviews.PadView
        android:id="@+id/left_pad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="6dp"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/left_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_guideline"
        app:padColor="@color/leftPadColor"
        app:padPosition="0"
        app:padRippleColor="@color/leftPadRippleColor" />

    <com.jorkoh.polyrhythmtrainer.ui.customviews.PadView
        android:id="@+id/right_pad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/right_guideline"
        app:layout_constraintTop_toBottomOf="@id/top_guideline"
        app:padColor="@color/rightPadColor"
        app:padPosition="1"
        app:padRippleColor="@color/rightPadRippleColor" />

</androidx.constraintlayout.widget.ConstraintLayout>